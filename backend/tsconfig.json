{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["es6", "es2015", "dom"],
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "paths": {
      "@root": ["./src"],
      "@internal": ["./src/internal"],
      "@internal/*": ["./src/internal/*"],
      "@pkg": ["./src/pkg"],
      "@pkg/*": ["./src/pkg/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.gql", "jest.config.js"],
  "exclude": ["node_modules", "dist", "coverage"]
}
